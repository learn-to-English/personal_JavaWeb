<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.learning.dao.NoticeReadMapper">

    <resultMap id="noticeReadMap" type="com.learning.model.NoticeRead">
        <id column="id" property="id"/>
        <result column="notice_id" property="noticeId"/>
        <result column="user_id" property="userId"/>
        <result column="read_time" property="readTime"/>
    </resultMap>

    <!-- 添加阅读记录 -->
    <insert id="insert" parameterType="com.learning.model.NoticeRead">
        INSERT INTO notice_read (notice_id, user_id, read_time)
        VALUES (#{noticeId}, #{userId}, NOW())
    </insert>

    <!-- 检查是否已读 -->
    <select id="findByNoticeAndUser" resultMap="noticeReadMap">
        SELECT * FROM notice_read
        WHERE notice_id = #{noticeId} AND user_id = #{userId}
    </select>

    <!-- 统计通知的阅读人数 -->
    <select id="countByNotice" parameterType="int" resultType="int">
        SELECT COUNT(*) FROM notice_read WHERE notice_id = #{noticeId}
    </select>

</mapper>