<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.learning.dao.DiscussionReplyMapper">

    <!-- 结果映射 -->
    <resultMap id="replyMap" type="com.learning.model.DiscussionReply">
        <id column="id" property="id"/>
        <result column="discussion_id" property="discussionId"/>
        <result column="user_id" property="userId"/>
        <result column="content" property="content"/>
        <result column="create_time" property="createTime"/>
        <result column="username" property="username"/>
        <result column="user_role" property="userRole"/>
    </resultMap>

    <!-- 查询话题的所有回复 -->
    <select id="findByDiscussionId" parameterType="int" resultMap="replyMap">
        SELECT
            dr.*,
            u.username,
            u.role AS user_role
        FROM discussion_reply dr
                 LEFT JOIN user u ON dr.user_id = u.id
        WHERE dr.discussion_id = #{discussionId}
        ORDER BY dr.create_time ASC
    </select>

    <!-- 根据ID查询回复 -->
    <select id="findById" parameterType="int" resultMap="replyMap">
        SELECT
            dr.*,
            u.username,
            u.role AS user_role
        FROM discussion_reply dr
                 LEFT JOIN user u ON dr.user_id = u.id
        WHERE dr.id = #{id}
    </select>

    <!-- 添加回复 -->
    <insert id="insert" parameterType="com.learning.model.DiscussionReply" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO discussion_reply (discussion_id, user_id, content, create_time)
        VALUES (#{discussionId}, #{userId}, #{content}, NOW())
    </insert>

    <!-- 删除回复 -->
    <delete id="delete" parameterType="int">
        DELETE FROM discussion_reply WHERE id = #{id}
    </delete>

</mapper>