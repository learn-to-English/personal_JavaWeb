<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.learning.dao.ExamAnswerMapper">
    <resultMap id="answerMap" type="com.learning.model.ExamAnswer">
        <id column="id" property="id"/>
        <result column="record_id" property="recordId"/>
        <result column="question_id" property="questionId"/>
        <result column="student_answer" property="studentAnswer"/>
        <result column="is_correct" property="isCorrect"/>
        <result column="score" property="score"/>
    </resultMap>

    <insert id="insert" parameterType="com.learning.model.ExamAnswer">
        INSERT INTO exam_answer (record_id, question_id, student_answer, is_correct, score)
        VALUES (#{recordId}, #{questionId}, #{studentAnswer}, #{isCorrect}, #{score})
    </insert>

    <select id="findByRecordId" parameterType="int" resultMap="answerMap">
        SELECT * FROM exam_answer WHERE record_id = #{recordId}
    </select>
</mapper>